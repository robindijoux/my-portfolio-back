meta {
  name: Filter Timeline Events by Type
  type: http
  seq: 2
}

get {
  url: {{base_url}}/timelineEvent?type=education
  body: none
  auth: inherit
}

tests {
  test("should return filtered timeline events", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody()).to.be.an('array');
  });
  
  test("all returned events should be of education type", function() {
    if (res.getBody().length > 0) {
      res.getBody().forEach(event => {
        expect(event.type).to.equal('education');
      });
    }
  });
}

